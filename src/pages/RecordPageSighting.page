<apex:page standardController="Sighting__c" recordSetVar="sighting" lightningStyleSheets="true" docType="html-5.0">
    <apex:form >
            <apex:pageBlock title="Sightings near you: " >
                <apex:pageBlockSection title="Sightings: " collapsible="false" columns="2" >
                <apex:pageBlockSectionItem dataStyle="">
                    <apex:iframe src="BirdLocation" scrolling="true" id="theIframe" />
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem dataStyle="">
                    <apex:pageBlockTable value="{!sighting}" var="sight" >
                        <apex:column value="{!sight.Name}"/>
                        <apex:column value="{!sight.SightingDate__c}"/>
                        <apex:column value="{!sight.SightingTime__c}"/>
                        <apex:column value="{!sight.Species__c}"/>
                    </apex:pageBlockTable>
                </apex:pageBlockSectionItem>
                </apex:pageBlockSection>
            </apex:pageBlock>
    </apex:form>
</apex:page>